<% layout('layouts/boilerplate') %>
<div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
  <div class="card shadow">
      <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
          alt="" class="card-img-top"/>
      <div class="card-body">
          <h5 class="card-title">Register</h5>
          <form action="/register" method="post" novalidate class="validate-form">
                    <div class="mb-2">
                    <label class="label-control" for="username">Username</label>
                    <input class="form-control" type="text" id="username" placeholder="Username(Min. 5 characters)" name="username" minlength="5" maxlength="100" required>
                   <div class="invalid-feedback">
                        Enter valid username format as required
                      </div>
                    </div> 
                  <div class="mb-2">
                    <label class="label-control" for="email">Email</label>
                    <input class="form-control" type="email" id="email" placeholder="email@address.com" name="email"  required>
                    <div class="invalid-feedback">
                        Enter a valid email format
                      </div>
                  </div>
        
                  <div class="mb-2">
                    <label class="label-control" for="password">Password</label>
                    <input class="form-control" type="password" placeholder="Create Password (Min. 8 characters)" id="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[a-zA-Z]).{8,}$" name="password" required>
                    <div class="invalid-feedback">
                      Please include at least 1 uppercase character, 1 lowercase character, and 1 number.
                      </div>
                  </div>
                 <div class="d-grid gap-2">
                  <button class="btn btn-success">Register</button>
                 </div>
            </form>
       </div>    
      </div>
  </div>

      